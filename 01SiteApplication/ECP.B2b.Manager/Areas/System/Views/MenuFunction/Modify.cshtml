@using ECP.Util.HtmlHelper.PartialExtend.Entity
@using ECP.Util.HtmlHelper;
@{
    Layout = null;
}
@Html.Partial("PartialComLayout/_LayoutSingleForm", new SingleFormLayout()
{
    FormId = "menuFunction-modify-form",
    IsContentClass = false,
    colCount = 1,
    Controls = new List<ExtendSingleFormControl>
    {
    new ExtendSingleFormControl("ID",ControlType.hidden){ Id="hidModifyID",IsFixed=true},
    new ExtendSingleFormControl("MENU_NAME", "菜单名称" ,ControlType.textbox){  Id="txtModifyMENU_NAME",IsDefaultDisabled=true },
    new ExtendSingleFormControl("MENU_ID",ControlType.hidden){ Id="hidModifyMENU_ID",IsFixed=true},

    new ExtendSingleFormControl("FUNCTION_CODE", "功能代码" ,ControlType.textbox){  Id="txtModifyFUNCTION_CODE",IsDefaultDisabled=true },

    new ExtendSingleFormControl("FUNCTION_DESC", "功能说明" ,ControlType.textbox){  Id="txtModifyFUNCTION_DESC",IsRequired_hint=true},

    new ExtendSingleFormControl("DEFAULT_ASSIGN","默认分配",ControlType.select)
    {
        Id ="selModifyDEFAULT_ASSIGN",
        dataSource = new SelectControlDataSourceSet("YES_NO"),
        IsRequired_hint=true
    },

    new ExtendSingleFormControl("REMARK","备注",ControlType.textbox){ Id="txtModifyREMARK"},
    }
})
<script>
    $(function () {
        //必填初始化
        $("#menuFunction-modify-form").validate({
            rules: {
                FUNCTION_DESC: { required: true },
                DEFAULT_ASSIGN: { required: true }
            }
        });
    });
</script>